<?xml version="1.0" encoding="UTF-8"?>
<configuration>

   <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>usermenu.log</file>
        <rollingPolicy
                class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>usermenu.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>10</maxHistory>
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{dd.MM.yyyy HH:mm:ss.SSS} %-5level %logger{20} - %msg%n</pattern>
        </encoder>
   </appender>

    <logger name="User menu" level="info"/>
    <logger name="UserInput" level="info"/>

   <root level="off">
        <appender-ref ref="FILE"/>
   </root>

</configuration>